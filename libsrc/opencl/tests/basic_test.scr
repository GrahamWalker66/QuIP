Set n 8
Vector v_h $n 1 float
Image i_h $n $n 1 float
Ramp1D v_h 1 1
Info v_h
Display v_h

#Set DEFAULT_OPENCL_DEVICE GeForce_GTX_680MX

platforms
  select Apple $DEFAULT_GPU
  quit

# default data area is now gpu?
Vector v_g $n 1 float
Image i_g $n $n 1 float
Info v_g

Ramp1D v_g 1 1
Display v_g
VSet v_g 2
Display v_g

Pause

advise 'testing 2-D set, mul, add'
VSet i_g 1
VVMul i_g i_g i_g
VVAdd i_g i_g i_g
Pause

# ramp2d has a problem!?
Ramp2D i_g 0 1 10
Display i_g
